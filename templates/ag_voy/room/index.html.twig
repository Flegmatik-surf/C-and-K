{% extends 'base.html.twig' %}

{% block title %}Liste des couettes & cafés!{% endblock %}

{% block main %}

    <h1>Liste des Rooms ! ✅</h1>
    
    <table class="table">
    	<thead>
    		<tr>
    			<th>Id</th>
    			<th>Résumé</th>
    			<th>Capacité</th>
    			<th>Superficie</th>
    			<th>Prix</th>
    			<th>Adresse</th>
    			<td> &nbsp;</td>
    		</tr>
    	</thead>
    	<tbody>
    		<tr>
                {% for room in rooms %}
                <td>{{ room.id }}</td>
                <td>{{ room.summary ? room.summary : '' }}</td>
                <td>{{ room.capacity}}</td>
                <td>{{ room.superficy}}</td>
                <td>{{ room.price}}</td>
                <td>{{ room.address}}</td>
                <td><a href = "{{ path('room_show', {'id': room.id}) }}">Voir</a></td>
                {% endfor %}
            </tr>
        </tbody>
	</table>
{% endblock %}